// Variable declarations and assignments
let a = 10
let b = 3.14
let c = true
let d = "Hello"

print("a =", a)
print("b =", b)
print("c =", c)
print("d =", d)

// Variable reassignment
let a = 20
print("New a =", a)

// Arithmetic operations
let sum = a + 5
let product = a * 2
let quotient = a / 4
let remainder = a % 3

print("sum =", sum)
print("product =", product)
print("quotient =", quotient)
print("remainder =", remainder)

// String concatenation
let greeting = "Hello" + " " + "World"
print(greeting)