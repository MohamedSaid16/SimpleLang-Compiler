// SimpleLang Hello World program
let message = "Hello, World!"
print(message)

// Arithmetic operations
let x = 10
let y = 20
let sum = x + y
print("Sum:", sum)

// Conditional statement
if sum > 15 then
    print("Sum is greater than 15")
else
    print("Sum is 15 or less")
end

// Loop example
let count = 1
while count <= 5 do
    print("Count:", count)
    let count = count + 1
end